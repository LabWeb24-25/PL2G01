@{
    var searchTerm = ViewData["SearchTerm"] as string;
    var results = ViewData["Results"] as List<string>;
}

<!DOCTYPE html>
<html>
<head>
    <title>Pesquisa de Biblioteca</title>
    <style>
        .search-container {
            display: flex;
            align-items: center;
            margin: 10px;
        }

        .search-input {
            width: 80%;
            padding: 5px;
        }

        .search-button {
            padding: 5px 10px;
            cursor: pointer;
        }

        .results {
            margin-top: 20px;
        }

        .result-item {
            border: 1px solid #000;
            padding: 10px;
            margin: 10px 0;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="search-container">
        <form method="get" action="/Biblioteca/Search">
            <input type="text" name="query" class="search-input" placeholder="Pesquisar..." value="@searchTerm" />
            <button type="submit" class="search-button">Pesquisar</button>
        </form>
    </div>

    <div class="results">
        @if (results != null && results.Any())
        {
            foreach (var result in results)
            {
                <div class="result-item">
                    <img src="/images/genshin_artbook.jpg" alt="@result" style="width: 100px;" />
                    <p>@result</p>
                </div>
            }
        }
        else if (!string.IsNullOrEmpty(searchTerm))
        {
            <p>Nenhum resultado encontrado para "@searchTerm".</p>
        }
    </div>
</body>
</html>

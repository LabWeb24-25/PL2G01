@model IEnumerable<Livro>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Biblioteca Fixe</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #404040;
        }

        .sidebar {
            background-color: #f7f7f7;
            padding: 10px;
        }

        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-menu {
            display: none;
            position: absolute;
            background-color: #fff;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
            padding: 10px 0;
            z-index: 1000;
            list-style: none;
            margin: 0;
        }

            .dropdown-menu a {
                display: block;
                padding: 10px 20px;
                color: #000;
                text-decoration: none;
                font-size: 14px;
            }

                .dropdown-menu a:hover {
                    background-color: #f0f0f0;
                }

        .dropdown:hover .dropdown-menu {
            display: block;
        }

        .book-item {
            text-align: center;
        }

            .book-item img {
                width: 100%;
                height: auto;
            }

        .table-container {
            max-height: 300px;
            overflow-y: auto;
            background-color: #f7f7f7;
            padding: 10px;
            border-radius: 5px;
        }

        .table {
            background-color: #f7f7f7;
        }

        .alert-section {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .alert-button {
            cursor: pointer;
            text-decoration: none;
            color: inherit;
        }

            .alert-button:hover {
                text-decoration: underline;
            }

        .search-section {
            display: flex;
            align-items: center;
            gap: 5px;
        }

            .search-section button {
                flex-shrink: 0;
                width: 90px;
            }

            .search-section .icon-button {
                background-color: transparent;
                border: none;
                cursor: pointer;
                font-size: 16px;
            }

                .search-section .icon-button:hover {
                    color: #007bff;
                }

        .logo {
            max-width: 80px;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 sidebar">
                <div class="text-center mb-4">
                    <img src="~/img/logo.png" class="logo">
                </div>
                <div class="search-section">
                    <input type="text" class="form-control" placeholder="Procure um livro">
                    <button class="btn btn-primary">Pesquisar</button>
                </div>
                <br />
                <div class="search-section">
                    <!-- Dropdown Button -->
                    <div class="dropdown">
                        <button class="icon-button" title="Adicionar">
                            <i class="fas fa-plus"></i>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="/Pages/AdicionarLivro">Adicionar Livro</a></li>
                            <li><a href="/Pages/AdicionarAutor">Adicionar Autor</a></li>
                        </ul>
                    </div>
                    <button class="icon-button" title="Editar">
                        <i class="fas fa-edit"></i>
                    </button>
                    <button class="icon-button" title="Remover">
                        <i class="fas fa-times"></i>
                    </button>
                </div>

                <!-- Book Covers -->
                <div class="row mt-3">
                    @if (Model != null)
                    {
                        @foreach (var livro in Model)
                        {
                            <div class="col-6 col-md-6 book-item mb-3">
                                <img src="img/@livro.imagem" alt="Capa do livro">
                                <p>@livro.titulo</p>
                            </div>
                        }
                    }
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-9">
                <div class="alert alert-warning mb-3 alert-section">
                    <a class="alert-button" id="alertButton">
                        <i class="fas fa-bell"></i> <span id="atrasos-count">0</span> Leitores com entregas em atraso
                    </a>
                    <div>
                        <button class="btn btn-secondary me-2" onclick="window.location.href='/Pages/NotificacoesBibliotecario'">Ver Detalhes</button>
                        <button class="btn btn-secondary" onclick="window.location.href='/Pages/VerRequisicoes'">Requisições</button>
                    </div>
                </div>
                <!-- Book Details Table -->
                <div class="table-container">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Título do Livro</th>
                                <th>Autor</th>
                                <th>Disponibilidade</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                @foreach (var livro in Model)
                                {
                                    <tr>
                                        <td>@livro.titulo</td>
                                        <td>@livro.autor.Nome</td>
                                        <td>@livro.numExemplares > 0 ? Em Stock : Esgotado</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@section Scripts{
    <script>
        function atualizarContagemAtrasos() {
            fetch('/HomeController/ObterAtrasos') // Substitua pelo caminho correto do seu endpoint
                .then(response => response.json())
                .then(data => {
                    document.getElementById('atrasos-count').innerText = data.count; // Atualiza o valor
                })
                .catch(error => console.error('Erro ao buscar atrasos:', error));
        }

        // Atualiza ao carregar a página
        atualizarContagemAtrasos();

        // Opcional: Atualizar automaticamente a cada X segundos (ex: 30 segundos)
        setInterval(atualizarContagemAtrasos, 30000);
    </script>
}

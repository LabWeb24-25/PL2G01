<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Biblioteca Fixe</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .sidebar {
            background-color: #f7f7f7;
            padding: 10px;
        }

        .book-item {
            text-align: center;
        }

            .book-item img {
                width: 100%;
                height: auto;
            }

        .table-container {
            max-height: 300px;
            overflow-y: auto;
        }

        .alert-button {
            cursor: pointer;
            text-decoration: none;
            color: inherit;
        }

            .alert-button:hover {
                text-decoration: underline;
            }

        .search-section {
            display: flex;
            align-items: center;
            gap: 5px;
        }

            .search-section button {
                flex-shrink: 0;
                width: 90px;
            }

            .search-section .icon-button {
                background-color: transparent;
                border: none;
                cursor: pointer;
                font-size: 16px;
            }

                .search-section .icon-button:hover {
                    color: #007bff;
                }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 sidebar">
                <h5 class="mb-4">Biblioteca Fixe</h5>
                <div class="search-section">
                    <input type="text" class="form-control" placeholder="Procure um livro">
                    <button class="btn btn-primary">Pesquisar</button>
                </div>
                <br />
                <div class="search-section">
                    <button class="icon-button" title="Adicionar">
                        <i class="fas fa-plus"></i>
                    </button>
                    <button class="icon-button" title="Editar">
                        <i class="fas fa-edit"></i>
                    </button>
                    <button class="icon-button" title="Remover">
                        <i class="fas fa-times"></i>
                    </button>
                </div>

@*                 <div class="col-md-3 sidebar">
                    <h5 class="mb-4">Biblioteca Fixe</h5>
                    <div class="search-section">
                        <input type="text" class="form-control" placeholder="Procure um livro">
                        <button class="btn btn-primary">Pesquisar</button>
                    </div>
                    <div>
                        <button class="icon-button" title="Adicionar">
                            <i class="fas fa-plus"></i>
                        </button>
                        <button class="icon-button" title="Editar">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="icon-button" title="Remover">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div> *@

                <!-- Book Covers -->
                <div class="row mt-3">
                    <div class="col-6 col-md-6 book-item mb-3">
                        <img src="https://via.placeholder.com/150" alt="Fabricante de Lágrimas">
                        <p>Fabricante de Lágrimas</p>
                    </div>
                    <div class="col-6 col-md-6 book-item mb-3">
                        <img src="https://via.placeholder.com/150" alt="Genshin Impact Art Book">
                        <p>Genshin Impact Art Book</p>
                    </div>
                    <div class="col-6 col-md-6 book-item mb-3">
                        <img src="https://via.placeholder.com/150" alt="Anatomia Humana">
                        <p>Anatomia Humana</p>
                    </div>
                    <div class="col-6 col-md-6 book-item mb-3">
                        <img src="https://via.placeholder.com/150" alt="Introdução à Engenharia">
                        <p>Introdução à Engenharia</p>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-9">
                <div class="alert alert-warning mb-3">
                    <a class="alert-button" id="alertButton">
                        <i class="fas fa-bell"></i> 4 Leitores com entregas em atraso
                    </a>
                </div>
                <!-- Book Details Table -->
                <div class="table-container">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Título do Livro</th>
                                <th>Autor</th>
                                <th>Disponibilidade</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Fabricante de Lágrimas</td>
                                <td>Erin Doom</td>
                                <td>Disponível</td>
                            </tr>
                            <tr>
                                <td>Genshin Impact Art Book</td>
                                <td>HoYoverse</td>
                                <td>Esgotado</td>
                            </tr>
                            <tr>
                                <td>Anatomia Humana</td>
                                <td>A. Ferreira; I. Furtado; L. Neto</td>
                                <td>Esgotado</td>
                            </tr>
                            <tr>
                                <td>Introdução à Engenharia</td>
                                <td>Luís Fernando Espinosa Cocian</td>
                                <td>Indisponível</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('alertButton').addEventListener('click', function () {
            alert('Você clicou no sininho! Aqui estão mais detalhes sobre os leitores com entregas em atraso.');
        });
    </script>
</body>
</html>

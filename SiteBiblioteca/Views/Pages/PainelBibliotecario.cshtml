<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Biblioteca Fixe</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .sidebar {
            background-color: #f7f7f7;
            padding: 10px;
        }

        .book-item {
            text-align: center;
        }

            .book-item img {
                width: 100%;
                height: auto;
            }

        .table-container {
            max-height: 300px;
            overflow-y: auto;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 sidebar">
                <h5 class="mb-4">Biblioteca Fixe</h5>
                <div>
                    <input type="text" class="form-control mb-3" placeholder="Procure um livro">
                    <button class="btn btn-primary w-100 mb-3">Pesquisar</button>
                </div>
                <div class="alert alert-warning">
                    <i class="fas fa-bell"></i> 4 Leitores com entregas em atraso
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-9">
                <div class="row mb-4">
                    <!-- Book Covers -->
                    <div class="col-md-3 book-item">
                        <img src="https://via.placeholder.com/150" alt="Fabricante de Lágrimas">
                        <p>Fabricante de Lágrimas</p>
                    </div>
                    <div class="col-md-3 book-item">
                        <img src="https://via.placeholder.com/150" alt="Genshin Impact Art Book">
                        <p>Genshin Impact Art Book</p>
                    </div>
                    <div class="col-md-3 book-item">
                        <img src="https://via.placeholder.com/150" alt="Anatomia Humana">
                        <p>Anatomia Humana</p>
                    </div>
                    <div class="col-md-3 book-item">
                        <img src="https://via.placeholder.com/150" alt="Introdução à Engenharia">
                        <p>Introdução à Engenharia</p>
                    </div>
                </div>

                <!-- Book Details Table -->
                <div class="table-container">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Título do Livro</th>
                                <th>Autor</th>
                                <th>Disponibilidade</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Fabricante de Lágrimas</td>
                                <td>Erin Doom</td>
                                <td>Disponível</td>
                            </tr>
                            <tr>
                                <td>Genshin Impact Art Book</td>
                                <td>HoYoverse</td>
                                <td>Esgotado</td>
                            </tr>
                            <tr>
                                <td>Anatomia Humana</td>
                                <td>A. Ferreira; I. Furtado; L. Neto</td>
                                <td>Esgotado</td>
                            </tr>
                            <tr>
                                <td>Introdução à Engenharia</td>
                                <td>Luís Fernando Espinosa Cocian</td>
                                <td>Indisponível</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
@model SiteBiblioteca.Models.Livro;

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        /* Estilização da página */
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #2d2d2d;
            font-family: Arial, sans-serif;
        }

        /* Container principal */
        .main-container {
            background-color: #666666;
            padding: 20px;
            border-radius: 5px;
            color: #ffffff;
            width: 800px;
            display: flex;
            gap: 20px;
        }

        /* Div para campos de texto */
        .form-fields {
            flex: 2;
        }

        /* Div para a foto e botões */
        .profile-section {
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .form-container {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        label {
            color: #fff;
        }

        input[type="text"], input[type="email"] {
            width: 100%;
            padding: 8px;
            border: none;
            border-radius: 5px;
        }

        .profile-picture {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-bottom: 20px;
        }

            .profile-picture img {
                width: 100px;
                height: 100px;
                border-radius: 0%;
                background-color: #cccccc;
                margin-bottom: 10px;
            }

        .button-container {
            display: flex;
            gap: 10px;
        }

        .button {
            padding: 10px;
            background-color: #cccccc;
            color: #000;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .button:hover {
                background-color: #bbbbbb;
            }

        /* Logo */
        .logo {
            width: 40px; /* Ajuste o tamanho conforme necessário */
            height: auto;
            cursor: pointer;
            margin-right: 20px;
            margin-bottom: 20px;
        }

    </style>
</head>
<body>
    <!-- Container Principal -->
    <div class="main-container" style="display: flex; gap: 20px; align-items: flex-start;">
        <!-- Div de Campos -->
        <div class="form-fields">
            <div style="display: flex; align-items: center; gap: 10px;">
                <img class="logo" src="/img/logo.png" onclick="location.href='/'" alt="Logotipo" style="width: 50px; cursor: pointer;" />
                <h2 style="margin: 0;">Editar Livro</h2>
            </div>

            <!-- Formulário de Edição -->
            <form method="post" action="/ControllerName/GuardarEdicao" enctype="multipart/form-data">
                <div class="form-container">
                    <label for="ISBN">ISBN:</label>
                    <input type="text" id="ISBN" name="ISBN" value="@Model.ISBN" required />

                    <label for="titulo">Título:</label>
                    <input type="text" id="titulo" name="Titulo" value="@Model.titulo" required />

                    <label for="autor">Autor:</label>
                    <input type="text" id="autor" name="Autor" value="@Model.autor.Nome" required />

                    <label for="genero">Género:</label>
                    <input type="text" id="genero" name="Genero" value="@Model.genero" required />

                    <label for="preco">Preço:</label>
                    <input type="number" id="preco" name="Preco" value="@Model.preco" step="0.01" required />

                    <label for="numexemplares">Número de Exemplares:</label>
                    <input type="number" id="numexemplares" name="NumExemplares" value="@Model.numExemplares" required />
                </div>
            </form>
        </div>

        <!-- Div de Imagem e Botões -->
        <div class="profile-section">
            <div class="profile-picture">
                <img src="~/img/@Model.imagem" alt="Foto do Livro" style="width: 100px; height: 100px;" />
                <input type="file" id="imagem" name="Imagem" accept="image/*" style="margin-top: 10px;" />
                <button type="button" class="button" style="margin-top: 10px;">Alterar capa do livro</button>
            </div>
            <div class="button-container" style="margin-top: 20px;">
                <button type="button" class="button" onclick="location.href='/'">Cancelar</button>
                <button type="submit" class="button">Guardar</button>
            </div>
        </div>
    </div>
</body>
</html>

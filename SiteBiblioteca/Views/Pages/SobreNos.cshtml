@model SiteBiblioteca.Models.DadosBiblioteca

@{
    ViewData["Title"] = "Sobre Nós";
}

<style>
    /* General page styles */
    body, html {
        height: 100%;
        margin: 0;
        background-color: #404040;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
        box-sizing: border-box;
    }

    .container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        padding: 20px;
        gap: 20px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .logo {
        vertical-align: middle; /* Alinha a imagem verticalmente no meio */
        max-width: 50px; /* Limita o tamanho máximo da imagem */
        height: auto; /* Mantém a proporção da imagem */
    }

    .container h1 {
        display: inline-block; /* Faz com que o h1 fique ao lado da imagem */
        margin: 0; /* Remove qualquer margem do h1 */
        vertical-align: middle; /* Alinha o texto ao centro da imagem */
    }

    .box {
        background-color: #fff;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        flex: 1;
        min-width: 280px;
        max-width: 400px;
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .box:hover {
            transform: translateY(-10px);
            box-shadow: 0px 6px 18px rgba(0, 0, 0, 0.2);
        }

    .header {
        background-color: #0066cc;
        color: #fff;
        padding: 10px;
        border-radius: 4px;
        font-weight: bold;
        font-size: 18px;
        margin-bottom: 15px;
    }

    .social-media {
        display: flex;
        justify-content: center;
        gap: 20px;
    }

    .social-icon {
        font-size: 35px;
        transition: transform 0.3s ease;
        color: #333;
    }

        .social-icon:hover {
            transform: scale(1.2);
        }

    .map img {
        width: 100%;
        max-width: 300px;
        border-radius: 8px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        margin-bottom: 15px;
    }

    iframe {
        border-radius: 8px;
        width: 100%;
        max-width: 400px;
        height: 300px;
        border: none;
    }

    .social-media a {
        text-decoration: none;
        color: inherit;
    }

    .social-icon-i {
        font-size: 35px;
    }

    /* Adjustments for smaller screens using flex layout */
    .container {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
    }

    .box {
        flex: 1 1 45%; /* Default to 2 items per row */
        max-width: 500px;
    }

    /* For very small screens, let the boxes take full width */
    .box {
        flex: 1 1 100%;
    }
</style>

<!-- External font and icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fi-css@latest/dist/fi.min.css">
<link rel="stylesheet" href="https://cdn.flaticon.com/icons/css/flat-icon.css">

<div class="container">
    <img src="~/img/logo.png" alt="Biblioteca" onclick="location.href='/'" class="logo"/>
    <h1 style="color:white; margin-left: 10px;">Conhece-nos melhor!</h1>
</div>

<div class="container">
    @if (Model != null)
    {
        <!-- Contact Section -->
        <div class="box">
            <div class="header">Contactos</div>
            <p style="flex-wrap:wrap; white-space: pre-wrap;">@Model.contactos</p>
        </div>

        <!-- Location Section -->
        <div class="box map">
            <div class="header">Localização da Biblioteca</div>
            <img src="~/img/@Model.image" alt="Imagem da Biblioteca">
            @Html.Raw(@Model.mapa)
        </div>

        <!-- Social Media Section -->
        <div class="box">
            <div class="header">Redes Sociais</div>
            <div class="social-media">
                <a class="social-icon" href="@Model.youtube" target="_blank">
                    <i class="fab fa-youtube social-icon-i"></i>
                </a>
                <a class="social-icon" href="@Model.x" target="_blank">
                    <i class="fab fa-x social-icon-i"></i>
                </a>
                <a class="social-icon" href="@Model.instagram" target="_blank">
                    <i class="fab fa-instagram social-icon-i"></i>
                </a>
                <a class="social-icon" href="@Model.tiktok" target="_blank">
                    <i class="fab fa-tiktok social-icon-i"></i>
                </a>
                <a class="social-icon" href="@Model.facebook" target="_blank">
                    <i class="fab fa-facebook social-icon-i"></i>
                </a>
            </div>
        </div>

        <!-- Opening Hours Section -->
        <div class="box">
            <div class="header">Horário de Funcionamento</div>
            <p style="flex-wrap:wrap; white-space: pre-wrap;">@Model.horario</p>
        </div>
    }
</div>

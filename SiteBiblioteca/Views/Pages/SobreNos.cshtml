@model SiteBiblioteca.Models.DadosBiblioteca

@{
    ViewData["Title"] = "Sobre Nós";
}

<style>
    /* Estilos gerais da página */
    body, html {
        height: 100%;
        margin: 0;
        background-color: #404040;
        font-family: Arial, sans-serif;
        color: #000;
    }

    .container {
        display: flex;
        justify-content: space-around;
        align-items: flex-start;
        padding: 20px;
        flex-wrap: wrap; /* Permitir que os itens se movam para a linha seguinte */
    }

    .box {
        background-color: #fff;
        border: 1px solid #000;
        padding: 15px;
        margin: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        flex: 1 1 300px; /* Permite que a caixa cresça e ocupe espaço disponível */
        max-width: 500px; /* Limita a largura máxima da caixa */
        text-align: center;
    }

    .header {
        background-color: #ddd;
        border: 1px solid #000;
        padding: 5px;
        text-align: center;
        font-weight: bold;
    }

    .social-media {
        display: flex;
        justify-content: center; /* Centraliza os ícones */
        align-items: center;
        gap: 50px; /* Espaço entre os ícones sociais */
    }

    .social-icon {
        display: flex;
        align-items: center; /* Centraliza verticalmente */
        cursor: pointer; /* Muda o cursor para indicar interatividade */
        font-size: 30px;
    }

    .social-img {
        width: 30px; /* Largura do ícone do YouTube */
        height: 30px; /* Altura do ícone do YouTube */
    }

    .social-icon-i {
        font-size: 30px; /* Tamanho da fonte dos ícones Font Awesome */
    }

    .map {
        text-align: center;
    }

        .map img {
            width: 100%; /* Faz com que a imagem ocupe a largura total da caixa */
            height: auto; /* Mantém a proporção da imagem */
            max-width: 200px; /* Limita a largura máxima da imagem */
            border: 1px solid #000;
        }

        .map a {
            color: #0000ff;
            text-decoration: underline;
        }

    /* Remove a estilização padrão dos links */
    .social-media a {
        text-decoration: none; /* Remove o sublinhado */
        color: inherit; /* Herda a cor do elemento pai (não muda a cor) */
    }

    .social-icon {
        display: inline-block;
        margin: 10px;
        /* Outras estilizações que você queira adicionar */
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fi-css@latest/dist/fi.min.css">
<link rel="stylesheet" href="https://cdn.flaticon.com/icons/css/flat-icon.css">

<div class="container">
    <!-- Secção de Contactos -->
    <div class="box">
        <div class="header">Contactos</div>
        <p>
            @Model.contactos
        </p>
    </div>

    <!-- Secção de Localização -->
    <div class="box map">
        <!-- Imagem da biblioteca -->
        <img src="~/img/biblioteca.png" alt="Imagem da Biblioteca">
        <div class="header">Localização da Biblioteca</div>
        <iframe src="@Model.mapa" width="400" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>

    <!-- Secção de Redes Sociais -->
    <div class="box">
        <div class="header">Redes Sociais</div>
        <p>
            <div class="social-media">
                <a class="social-icon" href="@Model.youtube" target="_blank">
                    <i class="fab fa-youtube social-icon-i"></i>
                </a>
                <a class="social-icon" href="@Model.x" target="_blank">
                    <i class="fab fa-x social-icon-i"></i>
                </a>
                <a class="social-icon" href="@Model.instagram" target="_blank">
                    <i class="fab fa-instagram social-icon-i"></i>
                </a>
                <a class="social-icon" href="@Model.tiktok" target="_blank">
                    <i class="fab fa-tiktok social-icon-i"></i>
                </a>
                <a class="social-icon" href="@Model.facebook" target="_blank">
                    <i class="fab fa-facebook social-icon-i"></i>
                </a>
            </div>
        </p>
    </div>

    <!-- Secção de Horário de Funcionamento -->
    <div class="box">
        <div class="header">Horário de Funcionamento</div>
        <p>
            @Model.horario
        </p>
    </div>
</div>
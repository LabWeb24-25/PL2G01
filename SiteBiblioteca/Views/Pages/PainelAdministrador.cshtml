@model List<SiteBiblioteca.Models.User>

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Painel do Administrador</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #404040;
            color: white;
        }

        .container {
            background-color: #404040;
            padding: 20px;
            border-radius: 5px;
        }

        .btn {
            color: white;
            border: none;
            padding: 10px 20px;
        }

        .btn-primary {
            background-color: #606060;
        }

        .btn-warning {
            background-color: red;
        }

        .btn-success {
            background-color: green;
        }

        .btn-primary,
        .btn-warning,
        .btn-success {
            cursor: pointer;
        }

/*             .btn-primary:hover,
            .btn-warning:hover,
            .btn-success:hover {
                background-color: #606060; /* Manter a cor original */
            } */

        .table {
            background-color: #404040;
            color: white; /* Dados sempre brancos */
            border: 1px solid #606060;
        }

            .table th, .table td {
                background-color: #404040;
                color: white;
                border-color: #606060;
            }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #505050; /* Fundo para linhas pares */
        }

        .table-striped tbody tr:nth-of-type(even) {
            background-color: #606060; /* Fundo para linhas ímpares */
        }

/*         .text-success {
            color: #00ff00 !important;
        }

        .text-danger {
            color: #ff0000 !important;
        }
 */
        h2 {
            margin-bottom: 20px;
            text-align: center;
        }

        .d-flex .btn {
            margin-right: 5px;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h2>Bem-vindo ao Painel do Administrador!</h2>

        <div class="d-flex justify-content-between align-items-center my-3">
            <div>
                <button class="btn btn-primary">Criar Administrador</button>
                <button class="btn btn-primary">Atualizar Dados da Biblioteca</button>
            </div>

            <div>
                <span class="me-2">1 Bibliotecário necessita de aprovação</span>
                <button class="btn btn-warning">Ver Detalhes</button>
            </div>
        </div>

        <table class="table table-bordered table-striped" style="color: white">
            <thead>
                <tr>
                    <th>Tipo de Utilizador</th>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Contato</th>
                    <th>Endereço</th>
                    <th>Confirmação</th>
                    <th>Imagem</th>
                    <th>Banimento</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserType</td>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>@user.Contact</td>
                        <td>@user.Address</td>
                        <td>
                            @if (user.confirmado == true)
                            {
                                <span class="text-success">Confirmado</span>
                            }
                            else
                            {
                                <span class="text-danger">Não Confirmado</span>
                            }
                        </td>
                        <td>
                            <img src="@user.image" alt="Imagem de @user.Name" class="img-thumbnail" style="max-width: 100px;">
                        </td>
                        <td>
                            @if (user.banido == false)
                            {
                                <button class="btn btn-warning">Banir</button>
                            }
                            else
                            {
                                <button class="btn btn-success">Desbanir</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

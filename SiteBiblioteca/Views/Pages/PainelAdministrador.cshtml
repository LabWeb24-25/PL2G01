@model List<SiteBiblioteca.Models.User>

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Painel do Administrador</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #404040;
        }

        .sidebar {
            background-color: #f7f7f7;
            padding: 10px;
        }

        .book-item {
            text-align: center;
        }

            .book-item img {
                width: 100%;
                height: auto;
            }

        .table-container {
            max-height: 300px;
            overflow-y: auto;
            background-color: #f7f7f7;
            padding: 10px;
            border-radius: 5px;
        }

        .table {
            background-color: #f7f7f7;
        }

        .alert-section {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .alert-button {
            cursor: pointer;
            text-decoration: none;
            color: inherit;
        }

            .alert-button:hover {
                text-decoration: underline;
            }

        .search-section {
            display: flex;
            align-items: center;
            gap: 5px;
        }

            .search-section button {
                flex-shrink: 0;
                width: 90px;
            }

            .search-section .icon-button {
                background-color: transparent;
                border: none;
                cursor: pointer;
                font-size: 16px;
            }

                .search-section .icon-button:hover {
                    color: #007bff;
                }

        .logo {
            max-width: 80px;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h2 style="color: white">Bem-vindo ao Painel do Administrador!</h2>

        <div class="d-flex justify-content-between align-items-center my-3">
            <div>
                <button class="btn btn-primary">Criar Administrador</button>
                <button class="btn btn-primary" onclick="window.location.href='Pages/EditarDadosBiblioteca'">Atualizar Dados da Biblioteca</button>
            </div>

            <div>
                <span class="me-2" style="color: white">1 Bibliotecário necessita de aprovação</span>
                <button class="btn btn-warning">Ver Detalhes</button>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Tipo de Utilizador</th>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Contato</th>
                    <th>Endereço</th>
                    <th>Confirmação</th>
                    <th>Imagem</th>
                    <th>Banimento</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserType</td>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>@user.Contact</td>
                        <td>@user.Address</td>
                        <td>
                            @if (user.confirmado == true)
                            {
                                <span class="text-success">Confirmado</span>
                            }
                            else
                            {
                                <span class="text-danger">Não Confirmado</span>
                            }
                        </td>
                        <td>
                            <img src="@user.image" alt="Imagem de @user.Name" class="img-thumbnail" style="max-width: 100px;">
                        </td>
                        <td>
                            @if (user.banido == false)
                            {
                                <button class="btn btn-warning" style="background-color: red">Banir</button>
                            }
                            else
                            {
                                <button class="btn btn-success" style="background-color: green">Desbanir</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@model IEnumerable<Requisitar>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Biblioteca Fixe - Notificações</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #404040; /* Cor de fundo cinza escuro */
            color: #fff; /* Cor do texto em branco para contraste */
        }

        .email-icon {
            cursor: pointer;
            color: #007bff;
        }

            .email-icon:hover {
                color: #0056b3;
            }

        .estado-btn {
            padding: 0.25rem 0.5rem;
            font-size: 0.9rem;
        }

        .table-wrapper {
            max-height: 300px;
            overflow-y: auto;
            background-color: #f7f7f7;
            padding: 10px;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h1 class="mb-4">Biblioteca Fixe - Notificações</h1>
        <div class="table-wrapper">
            <table id="notificationsTable" class="table table-striped table-bordered" style="background-color: f7f7f7">
                <thead class="table-dark">
                    <tr>
                        <th>Nome</th>
                        <th>Livro</th>
                        <th>Data de Requisição</th>
                        <th>Data de Devolução</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var req in Model)
                        {
                            <tr>
                                <td>@req.leitor.Name</td>
                                <td>@req.livro.titulo</td>
                                <td>@req.data_requisicao</td>
                                <td>@req.data_entrega</td>
                                <td>
                                    Em atraso
                                    <button class="btn btn-sm btn-success estado-btn"><i class="fa fa-envelope">Enviar um email</i></button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#notificationsTable').DataTable({
                language: {
                    url: "https://cdn.datatables.net/plug-ins/1.13.6/i18n/pt-PT.json"
                }
            });
        });
    </script>
</body>
</html>
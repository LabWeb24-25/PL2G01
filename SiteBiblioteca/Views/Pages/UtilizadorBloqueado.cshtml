@model Bloqueio 

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Banir Utilizador</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #404040;
            margin: 0;
            padding: 0;
            display: flex;
            align-items: center; /* Centraliza verticalmente */
            justify-content: center; /* Centraliza horizontalmente */
            height: 100vh; /* Faz o conteúdo ocupar a altura total da viewport */
        }

        .container {
            max-width: 500px;
            width: 100%;
            background: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .image {
            height: 70px;
            width: 70px;
            display: block;
            margin: 0 auto;
        }

        .warning {
            font-size: 1.2em;
            color: #d9534f;
            margin-bottom: 20px;
        }

        .form-group1{
            text-align: center; /* Centraliza horizontalmente o texto */
        }

        .form-group2 {
            margin-bottom: 15px;
            text-align: left; /* Alinha o conteúdo do grupo à esquerda */
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        .readonly-box {
            width: 100%;
            height: auto;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
            background-color: #f5f5f5;
            color: #555;
            overflow-y: auto;
            resize: none;
            text-align: left;
        }

        a {
            color: #007bff;
            text-decoration: none;
            font-size: 0.9em;
            display: block;
            margin-top: 10px;
        }

            a:hover {
                text-decoration: underline;
            }

        button {
            width: 100%;
            padding: 10px;
            background-color: #d9534f;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
        }

            button:hover {
                background-color: #404040;
            }
    </style>
</head>

<body>

    <div class="container">
        <img class="image" src="~/img/Aloquete.png" />
        <p class="warning">Banimento de Utilizador</p>

        <!-- Data de bloqueio -->
        <div class="form-group1">
            <label for="data-bloqueio">Data de Bloqueio: @Model.dataBloqueio </label>
        </div>

        <!-- Motivo do bloqueio -->
        <div class="form-group2">
            <label for="reason">Motivo de Bloqueio:</label>
            <div id="reason" class="readonly-box">@Model.motivo</div>
        </div>

        <!-- Link de suporte -->
        <a>Entre em contacto com a instituição.</a>

        <form asp-action="Index" asp-controller="Home" method="post">
            <button type="submit" class="btn btn-danger" style="margin-top: 7px;">Voltar para a página principal</button>
        </form>
    </div>

    <script>
        function voltarPaginaPrincipal() {
            const reason = document.getElementById('reason').innerText;
            if (reason.trim() === '') {
                alert('Por favor, insira um motivo para o banimento.');
            } else {
                alert('Voltando para a página principal...');
            }
        }
    </script>

</body>
</html>

@model SiteBiblioteca.Models.Autor

@{
    Layout = "_Layout";
}

<!-- Importação do Bootstrap e Font Awesome -->
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #404040; /* Cor de fundo da página */
            color: #ffffff; /* Cor do texto para contrastar com o fundo escuro */
        }
    </style>
</head>

<div class="autor-detalhes container mt-5">
    <!-- Logo da biblioteca no canto superior esquerdo -->
    <div class="logo position-absolute top-0 start-0 p-3">
        <img src="~/img/logo.png" class="img-fluid" onclick="window.location.href='/'" alt="Logo da Biblioteca" />
    </div>

    <div class="row mt-5 pt-5">
        <!-- Foto do Autor (Se houver) -->
        <div class="col-md-5 text-center">
            <!-- Se o autor tiver uma imagem associada, ela será exibida -->
            @if (!string.IsNullOrEmpty(Model.Imagem))
            {
                <img src="~/img/@Model.Imagem" class="img-fluid rounded shadow-lg" alt="Foto do Autor: @Model.Nome" style="width: 350px; height: 500px;" />
            }
            else
            {
                <img src="~/img/default-author.jpg" class="img-fluid rounded shadow-lg" alt="Foto do Autor: @Model.Nome" style="width: 350px; height: 500px;" />
            }
        </div>

        <!-- Informações do Autor -->
        <div class="col-md-7">
            <h1>@Model.Nome</h1>
            <hr />
            <h3>Bibliografia</h3>
            <p>@Model.Bibliografia</p>

            <div class="d-flex justify-content-between align-items-center mt-4">
                <a href="~/Pages/Pesquisa?termo=@Model.Nome" class="btn btn-secondary btn-lg">
                    <i class="fas fa-book-open"></i> Ver Livros do Autor
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Scripts do Bootstrap -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

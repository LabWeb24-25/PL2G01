@model User

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Banir Utilizador</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #404040;
            margin: 0;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .container {
            max-width: 500px;
            width: 100%;
            background: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            display: flex;
            flex-direction: column;
            justify-content: center;
            position: relative; /* Adicionando posição relativa ao container */
        }

        .image {
            height: 70px;
            width: 70px;
            display: block;
            margin: 0 auto;
        }

        .warning {
            font-size: 1.2em;
            color: #d9534f;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
            text-align: left;
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

        input, textarea {
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
            margin-bottom: 10px;
        }

        textarea {
            height: 100px;
            resize: none;
        }

        button {
            width: 100%;
            padding: 10px;
            background-color: #d9534f;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
        }

            button:hover {
                background-color: #404040;
            }

        .container .btn-primary {
            position: absolute;
            top: 10px;
            left: 10px;
            background-color: #007bff;
            border: none;
            padding: 10px 15px;
            font-size: 16px;
            cursor: pointer;
            border-radius: 5px;
            width: auto; /* Define a largura como automática */
            min-width: 50px; /* Define uma largura mínima */
        }

            .container .btn-primary:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">
        <button class="btn-primary" onclick="window.location.href='./PainelAdministrador'">&lt;</button>
        <img class="image" src="~/img/UserLocked.png" />
        <p class="warning">Banir Utilizador</p>
        <form method="post" asp-action="Banir">
            <div class="form-group">
                <label for="reason">Motivo do Banimento:</label>
                <textarea id="reason" name="reason" placeholder="Insira o motivo do banimento" required></textarea>
            </div>
            <input type="hidden" name="userId" value="@Model.Id" />
            <button type="submit" class="btn btn-warning" style="background-color: red">Confirmar Banimento</button>
        </form>
    </div>
</body>
</html>

@{
    ViewData["Title"] = "Editar Perfil";
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <style>
        /* Estilos básicos para corresponder ao layout do mockup */
        body {
            background-color: #4f4f4f;
            font-family: Arial, sans-serif;
            color: white;
        }

        .container {
            width: 600px;
            margin: 50px auto;
            padding: 20px;
            background-color: #3d3d3d;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        }

        .profile-header {
            font-size: 1.5em;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .profile-info {
            border: 1px solid white;
            padding: 15px;
            margin-bottom: 15px;
        }

            .profile-info p {
                margin: 5px 0;
            }

        .profile-picture {
            float: right;
            width: 100px;
            height: 100px;
            background-color: white;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .profile-picture img {
                max-width: 90%;
                max-height: 90%;
            }

        .buttons {
            margin-top: 20px;
            text-align: right;
        }

            .buttons button {
                margin-left: 10px;
                padding: 10px 15px;
                background-color: #2c2c2c;
                border: 1px solid white;
                color: white;
                cursor: pointer;
                border-radius: 5px;
                font-weight: bold;
            }

                .buttons button:hover {
                    background-color: #555;
                }
    </style>
</head>
<body>
    <div class="container">
        <div class="profile-header">Perfil de Utilizador</div>
        <div class="profile-info">
            <p><strong>Username:</strong> @Model.Username</p>
            <p><strong>Nome:</strong> @Model.Input.FullName</p> <!-- Correção -->
            <p><strong>Email:</strong> @Model.Input.Email</p> <!-- Correção -->
            <p><strong>Morada:</strong> @Model.Input.Address</p> <!-- Correção -->
            <p><strong>Contactos:</strong> @Model.Input.Contact</p> <!-- Correção -->
            <p><strong>Email Confirmado:</strong> @(Model.Input.IsEmailConfirmed ? "Sim" : "Não")</p> <!-- Correção -->
        </div>
        <div class="profile-picture">
            <!-- Placeholder para a foto de perfil do usuário -->
            <img src="~/images/user-placeholder.png" alt="Foto de Perfil" />
        </div>
        <div class="buttons">
            <button onclick="location.href='@Url.Page("/Account/Manage/EditProfile")'">Editar Perfil</button>
            <button onclick="location.href='@Url.Page("/Account/Manage/ConfirmEmail")'">Confirmar Email</button>
        </div>
    </div>
</body>
</html>

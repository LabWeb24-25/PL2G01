@{
    ViewData["Title"] = "Notificações do Administrador";
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #404040;
        }

        .table-container {
            max-height: 300px;
            overflow-y: auto;
            background-color: #f7f7f7;
            padding: 10px;
            border-radius: 5px;
        }

        .table {
            background-color: #f7f7f7;
        }

        h3 {
            color: white;
        }

        .btn-success {
            background-color: green;
        }

        .btn-danger {
            background-color: red;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h3 class="mb-4">Bem-vindo Administrador Pacheco!</h3>

        <div class="table-container">
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>ISBN</th>
                        <th>Título</th>
                        <th>Autor</th>
                        <th>Género</th>
                        <th>Preço</th>
                        <th>Leitor</th>
                        <th>Confirmação</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Bibliotecário</td>
                        <td>Giacomo Guillizoni</td>
                        <td>GiaGui@biblioteca_fixe.pt</td>
                        <td>Gui</td>
                        <td>Rua do Cabrito N.º 29</td>
                        <td>936728093</td>
                        <td>
                            <div class="d-flex">
                                <form method="post" action="/Admin/Confirmar">
                                    <button type="submit" class="btn btn-success btn-sm me-2">Confirmar</button>
                                </form>
                                <form method="post" action="/Admin/Negar">
                                    <button type="submit" class="btn btn-danger btn-sm">Negar</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    <!-- Linhas adicionais podem ser adicionadas aqui -->
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@{
    ViewData["Title"] = "Perfil de Utilizador";
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        /* Estilização da página */
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #2d2d2d;
            font-family: Arial, sans-serif;
        }

        /* Container principal */
        .main-container {
            max-width: 800px;
            background-color: #666666;
            padding: 20px;
            border-radius: 5px;
            color: #ffffff;
        }

        /* Título centralizado */
        h2 {
            text-align: center;
            color: #ffffff;
        }

        /* Estilo do link de voltar */
        .back-home {
            display: inline-block;
            margin-bottom: 15px;
            color: #ffffff;
            text-decoration: none;
            font-weight: bold;
        }

        /* Conteúdo do perfil */
        .profile-content {
            display: flex;
            background-color: #ffffff;
            color: #000;
            padding: 20px;
            border-radius: 5px;
        }

        /* Informações do usuário */
        .user-info {
            flex: 1;
            padding-right: 20px;
        }

        /* Imagem e botões */
        .profile-picture-container {
            text-align: center;
        }

        /* Estilo da imagem de perfil */
        .profile-picture {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background-color: #ffffff;
            margin-bottom: 15px;
        }

        /* Botões */
        .button {
            display: block;
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            background-color: #cccccc;
            color: #000;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-align: center;
        }

            .button:hover {
                background-color: #bbbbbb;
            }

        /* Rodapé */
        .footer {
            text-align: center;
            color: #ccc;
            font-size: 12px;
            margin-top: 20px;
        }

            .footer a {
                color: #3498db;
                text-decoration: none;
            }
    </style>
</head>
<body>
    <!-- Container Principal -->
    <div class="main-container"> 
        <!-- Link para voltar à página inicial -->
        <img src="/img/logo.png" onclick="href='/home'" />

        <!-- Título -->
        <h2>Perfil de Utilizador</h2>

        <!-- Conteúdo do Perfil -->
        <div class="profile-content">
            <!-- Informações do usuário -->
            <div class="user-info">
                <p><strong>Username:</strong> Jota</p>
                <p><strong>Nome:</strong> João Teixeira Lopes</p>
                <p><strong>Email:</strong> joaoteixeiralopes@gmail.com</p>
                <p><strong>Morada:</strong> Rua dos Abutres N.º 10</p>
                <p><strong>Contactos:</strong> 912883209</p>
                <p><strong>Email Confirmado:</strong> Não</p>
            </div>

            <!-- Imagem e botões -->
            <div class="profile-picture-container">
                <img src="~/images/profile-placeholder.png" alt="Foto de Perfil" class="profile-picture" />
                <button class="button" onclick="window.location.href='/home/EditarPerfil'">Editar Perfil</button>
                <button class="button" onclick="confirmarEmail()">Confirmar Email</button>
            </div>
        </div>
    </div>

    <!-- Rodapé -->
    <div class="footer">
        © 2024 - SiteBiblioteca - <a href="/privacy">Privacy</a>
    </div>

    <script>
        function confirmarEmail() {
            alert("Um email de confirmação foi enviado para o seu endereço.");
        }
    </script>
</body>
</html>

@model List<UserViewModel>

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Painel do Administrador</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h2>Bem-vindo Administrador @ViewData["AdminName"]!</h2>
        <div class="d-flex justify-content-between align-items-center my-3">
            <button class="btn btn-primary">Criar Administrador</button>
            <div>
                <span class="me-2">1 Bibliotecário necessita de aprovação</span>
                <button class="btn btn-warning">Ver Detalhes</button>
            </div>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Tipo de Utilizador</th>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Username</th>
                    <th>Banimento</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.TipoUtilizador</td>
                        <td>@user.Nome</td>
                        <td>@user.Email</td>
                        <td>@user.Username</td>
                        <td>
                            <button class="btn btn-danger">Banir</button>
                            <button class="btn btn-secondary">Desbanir</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


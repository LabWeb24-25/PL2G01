@page
@{
    ViewData["Title"] = "Confirmar Email";
}

<style>
    /* Garante que o fundo ocupe toda a área da página */
    html, body {
        height: 100%;
        margin: 0;
        background-color: #404040;
    }

    .button {
        padding: 10px;
        background-color: #cccccc;
        color: #000;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }
</style>

<div style="display: flex; justify-content: center; align-items: center; height: 100vh; background-color: #444;">
    <div style="width: 400px; text-align: center; padding: 20px; background-color: #ffffff; border: 1px solid #000; box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);">
        <h2 style="font-weight: normal;">Por favor, confirme o seu email</h2>

        <p style="font-size: 16px; margin-bottom: 30px; color: #333;">
            Aceda à sua conta de email para concluir <br /> o processo de confirmação
        </p>

        <div class="button-container">
            <button class="button">Enviar novamente</button>
            <button class="button">Alterar endereço de email</button>
        </div>
    </div>
</div>

@page
@model RegisterModel
@{
    ViewData["Title"] = "Registar";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Registar</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <!-- Nome -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control" placeholder="Nome" aria-required="true" />
                <label asp-for="Input.Name">Nome</label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>

            <!-- Username -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Username" class="form-control" placeholder="Username" aria-required="true" />
                <label asp-for="Input.Username">Username</label>
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" aria-required="true" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Contacto -->
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Contacto" aria-required="true" />
                <label asp-for="Input.PhoneNumber">Contacto</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <!-- Morada -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Address" class="form-control" placeholder="Morada" aria-required="true" />
                <label asp-for="Input.Address">Morada</label>
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>

            <!-- Código de Acesso -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Código de Acesso" aria-required="true" />
                <label asp-for="Input.Password">Código de Acesso</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Confirmar Código de Acesso -->
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Confirmar Código de Acesso" aria-required="true" />
                <label asp-for="Input.ConfirmPassword">Confirmar Código de Acesso</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Tipo de Usuário (Leitor ou Bibliotecário) -->
            <div class="mb-3">
                <label for="UserType" class="form-label">Tipo de Usuário</label>
                <select asp-for="Input.UserType" class="form-select">
                    <option value="Leitor">Leitor</option>
                    <option value="Bibliotecario">Bibliotecário</option>
                </select>
                <span asp-validation-for="Input.UserType" class="text-danger"></span>
            </div>

            <!-- Botão de Registro -->
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registrar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

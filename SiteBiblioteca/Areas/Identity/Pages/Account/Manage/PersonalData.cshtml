@page
@model SiteBiblioteca.Areas.Identity.Pages.Account.Manage.PersonalDataModel
<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        /* Estilização da página */
        html, body {
        height: 100%;
        margin: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #2d2d2d;
        font-family: Arial, sans-serif;
        }

        /* Container principal */
        .main-container {
        background-color: #404040;
        padding: 20px;
        border-radius: 5px;
        color: #ffffff;
        position: relative;
        }

        /* Título e logo em linha */
        .header {
        display: flex;
        align-items: center;
        justify-content: flex-start;
        gap: 10px;
        margin-bottom: 20px;
        }

        /* Logo */
        .header img {
        width: 40px; /* Ajuste o tamanho conforme necessário */
        height: auto;
        cursor: pointer;
        margin-right: 150px;
        }

        /* Título */
        .header h2 {
        color: #ffffff;
        margin-left: -150px;
        }

        /* Conteúdo do perfil */
        .content-wrapper {
        display: flex;
        gap: 20px;
        }

        .profile-content {
        display: flex;
        background-color: #ffffff;
        color: #000;
        padding: 20px;
        border-radius: 5px;
        align-items: flex-start;
        gap: 20px;
        flex: 1;
        }

        .user-info {
        flex: 1;
        }

        .profile-picture {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        background-color: #cccccc;
        }

        /* Container dos botões */
        .button-container {
        display: flex;
        flex-direction: column;
        gap: 10px;
        margin-left: 20px;
        }

        .button {
        padding: 10px;
        width: 150px;
        background-color: #cccccc;
        color: #000;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        text-align: center;
        }

        .button:hover {
        background-color: #bbbbbb;
        }

        /* Rodapé */
        .footer {
        text-align: center;
        color: #ccc;
        font-size: 12px;
        margin-top: 20px;
        }

        .footer a {
        color: #3498db;
        text-decoration: none;
        }
    </style>
</head>
<body>
    <!-- Container Principal -->
    <div class="main-container">
        <!-- Logo e Título alinhados horizontalmente -->
        <div class="header">
            <img src="/img/logo.png" onclick="location.href='/'" alt="Logotipo" />
            <h2>Perfil de Utilizador</h2>
        </div>

        <!-- Conteúdo do Perfil e Botões -->
        <div class="content-wrapper">
            <!-- Conteúdo do Perfil -->
            <div class="profile-content">
                <!-- Informações do utilizador -->
                <div class="user-info">
                    <p><strong>Username:</strong> @Model.UserName</p>
                    <p><strong>Nome:</strong> @Model.Name</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Morada:</strong> @Model.Address</p>
                    <p><strong>Contactos:</strong> @Model.Contact</p>
                    <p>
                        <strong>Email Confirmado:</strong>
                        @(Model.Confirmado ? "Sim" : "Não")
                    </p>
                </div>

                <!-- Imagem de perfil -->
                <div class="profile-picture-container">
                    <img src="@Model.Image" class="profile-picture" />
                </div>
            </div>

            <!-- Botões fora do container de informações -->
            <div class="button-container">
                <button class="button" onclick="window.location.href='/Pages/EditarPerfil'">Editar Perfil</button>
                @if(!Model.Confirmado)
                {
                    <button class="button" onclick="confirmarEmail()">Confirmar Email</button>
                }
            </div>
        </div>
    </div>
</body>
</html>

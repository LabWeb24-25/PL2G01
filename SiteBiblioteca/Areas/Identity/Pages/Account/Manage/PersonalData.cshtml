@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="container mt-4">
    <!-- Cabeçalho Principal -->
    <h3 class="text-primary">@ViewData["Title"]</h3>
    <p class="text-muted">Manage your personal information and privacy settings.</p>

    <div class="row">
        <div class="col-md-8">
            <!-- Informação do Perfil do Usuário -->
            <h4 class="mb-3">Profile Information</h4>
            <dl class="row border p-3 rounded bg-light">
                <dt class="col-sm-4">Name</dt>
                <dd class="col-sm-8">@Model.User.Name</dd>

                <dt class="col-sm-4">Email</dt>
                <dd class="col-sm-8">@Model.User.Email</dd>

                <dt class="col-sm-4">Phone Number</dt>
                <dd class="col-sm-8">@Model.User.PhoneNumber</dd>

                <!-- Outras informações do perfil podem ser adicionadas aqui -->
            </dl>

            <!-- Aviso sobre exclusão de dados -->
            <div class="alert alert-warning mt-4" role="alert">
                <strong>Warning:</strong> Deleting this data will permanently remove your account, and this cannot be recovered.
            </div>

            <!-- Botões de Download e Exclusão de Dados -->
            <div class="d-flex justify-content-start gap-3 mt-3">
                <form id="download-data" asp-page="DownloadPersonalData" method="post">
                    <button class="btn btn-primary" type="submit">Download Personal Data</button>
                </form>

                <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">Delete Account</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@page
@model IndexModel
@{
    ViewData["Title"] = "Perfil de Utilizador";
}
<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <style>
        /* Estilo principal para centralizar e estilizar o perfil */
        body {
            background-color: #4f4f4f;
            font-family: Arial, sans-serif;
            color: white;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        /* Container principal do perfil */
        .container {
            width: 500px;
            padding: 20px;
            background-color: #3d3d3d;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
            position: relative;
        }

        /* Estilo para as informações do perfil */
        .profile-info {
            border: 1px solid white;
            padding: 20px;
            padding-top: 60px; /* Para dar espaço à imagem no topo */
            position: relative;
        }

        .profile-info p {
            margin: 10px 0;
        }

        /* Estilo para a foto de perfil dentro do retângulo branco */
        .profile-picture {
            width: 100px;
            height: 100px;
            background-color: white;
            border: 1px solid #ccc;
            position: absolute;
            top: -30px;
            right: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 10px;
        }

        .profile-picture img {
            max-width: 90%;
            max-height: 90%;
            border-radius: 5px;
        }

        /* Estilo para os botões */
        .buttons {
            margin-top: 20px;
            text-align: center;
        }

        .buttons button {
            margin: 0 5px;
            padding: 10px 20px;
            background-color: #2c2c2c;
            border: 1px solid white;
            color: white;
            cursor: pointer;
            border-radius: 5px;
            font-weight: bold;
        }

        .buttons button:hover {
            background-color: #555;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Perfil de Utilizador</h2>
        <div class="profile-info">
            <div class="profile-picture">
                <img src="~/images/user-placeholder.png" alt="Foto de Perfil" />
            </div>
            <p><strong>Username:</strong> Usuário Anônimo</p>
            <p><strong>Nome:</strong> Nome Completo (Exemplo)</p>
            <p><strong>Email:</strong> email@exemplo.com</p>
            <p><strong>Morada:</strong> Endereço (Exemplo)</p>
            <p><strong>Contactos:</strong> Contato (Exemplo)</p>
            <p><strong>Email Confirmado:</strong> Não</p>
        </div>
        <div class="buttons">
            <button onclick="location.href='@Url.Page("/Account/Manage/EditProfile")'">Editar Perfil</button>
            <button onclick="location.href='@Url.Page("/Account/Manage/ConfirmEmail")'">Confirmar Email</button>
        </div>
    </div>
</body>
</html>

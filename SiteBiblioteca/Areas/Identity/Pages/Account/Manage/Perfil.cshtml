@page
@model IndexModel
@{
    ViewData["Title"] = "Perfil de Utilizador";
}
<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div style="max-width: 800px; margin: 0 auto; background-color: #666666; padding: 20px; border-radius: 5px; color: #ffffff;">
        <h2>Perfil de Utilizador</h2>

        <div style="display: flex;">
            <!-- Retângulo com informações do usuário -->
            <div style="flex: 1; padding: 20px; background-color: #ffffff; color: #000000; border: 1px solid #ffffff; border-radius: 5px;">
                <div style="margin-bottom: 15px;">
                    <p><strong>Username:</strong> Usuário Anônimo</p>
                </div>

                <div style="margin-bottom: 15px;">
                    <p><strong>Nome:</strong> Nome Completo (Exemplo)</p>
                </div>

                <div style="margin-bottom: 15px;">
                    <p><strong>Email:</strong> email@exemplo.com</p>
                </div>

                <div style="margin-bottom: 15px;">
                    <p><strong>Morada:</strong> Endereço (Exemplo)</p>
                </div>

                <div style="margin-bottom: 15px;">
                    <p><strong>Contactos:</strong> Contato (Exemplo)</p>
                </div>

                <div style="margin-bottom: 15px;">
                    <p><strong>Email Confirmado:</strong> Não</p>
                </div>
            </div>

            <!-- Lado direito com a foto de perfil -->
            <div style="flex: 0.5; text-align: center; padding-left: 20px;">
                <div style="margin-bottom: 15px;">
                    <img src="~/images/profile-placeholder.png" alt="Foto de Perfil" style="width: 100px; height: 100px; border-radius: 50%; background-color: #ffffff;" />
                </div>
            </div>
        </div>

        <!-- Botões -->
        <div style="text-align: right; margin-top: 20px;">
            <button onclick="location.href='@Url.Page("/Account/Manage/EditProfile")'" style="padding: 10px 20px; background-color: #888888; color: #ffffff; border: none; border-radius: 5px; margin-right: 10px;">
                Editar Perfil
            </button>
            <button onclick="location.href='@Url.Page("/Account/Manage/ConfirmEmail")'" style="padding: 10px 20px; background-color: #4CAF50; color: #ffffff; border: none; border-radius: 5px;">
                Confirmar Email
            </button>
        </div>
    </div>
</body>
</html>
